{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@types": ["./src/app/types"],
      "@/*": ["./src/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist", "/*.js"]
}
