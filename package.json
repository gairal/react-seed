{
  "name": "react-seed",
  "version": "1.0.0",
  "description": "React Shell",
  "main": "dist/index.html",
  "scripts": {
    "build": "yarn run clean && NODE_ENV=production parcel build src/index.html --no-source-maps --detailed-report",
    "clean": "rimraf ./dist",
    "dev": "NODE_ENV=development parcel src/index.html",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "start": "yarn run dev",
    "test": "NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gairal/react-seed.git"
  },
  "keywords": [
    "react",
    "tailwind",
    "jest"
  ],
  "author": "@gairal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gairal/react-seed/issues"
  },
  "homepage": "https://github.com/gairal/react-seed#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^10.0.4",
    "comments": "^0.3.7",
    "cssnano": "^4.1.10",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-typescript-prettier": "^4.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "parcel": "^2.0.0-beta.1",
    "postcss": "^8.1.10",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "tailwind": "^4.0.0",
    "tailwindcss": "^2.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "nanoid": "^3.1.18",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,scss,css,md,prettierrc,eslintrc,graphql}": [
      "prettier --write"
    ]
  }
}
