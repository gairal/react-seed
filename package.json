{
  "name": "react-seed",
  "version": "1.0.0",
  "description": "React Shell",
  "main": "dist/index.html",
  "scripts": {
    "build": "yarn run clean && NODE_ENV=production parcel build src/index.html --no-source-maps --detailed-report",
    "clean": "rimraf ./dist",
    "dev": "NODE_ENV=development parcel src/index.html",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "start": "yarn run dev",
    "test": "NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gairal/react-seed.git"
  },
  "keywords": [
    "react",
    "tailwind",
    "jest"
  ],
  "author": "@gairal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gairal/react-seed/issues"
  },
  "homepage": "https://github.com/gairal/react-seed#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@parcel/transformer-sass": "2.0.0-beta.2",
    "@testing-library/react": "^11.2.0",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "autoprefixer": "^10.2.0",
    "comments": "^0.3.0",
    "cssnano": "^5.0.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "eslint-import-resolver-alias": "^1.1.0",
    "eslint-plugin-import": "^2.23.0",
    "husky": "^6.0.0",
    "jest": "^27.0.0",
    "lint-staged": "^11.0.0",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.3.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.0",
    "sass": "^1.34.0",
    "tailwind": "^4.0.0",
    "tailwindcss": "^2.1.0",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.2.0",
    "typescript": "^4.3.0"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "uuid": "^8.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,scss,css,md,prettierrc,eslintrc,graphql}": [
      "prettier --write"
    ]
  }
}
